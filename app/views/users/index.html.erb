<h1> Users </h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Address</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <%@users.each do |u| %>
  <tr>
    <td><%=u.name %></td>
    <td><%=u.email %></td>
    <td><%=u.address.values.join(",") %></td>
    <td><%= button_to "Edit", edit_user_path(u.id), method: :get%></td>
  </tr>
  <%end %>

  </tbody>
</table>